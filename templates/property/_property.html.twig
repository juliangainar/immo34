<div class="card mb-4">
    {% if property.filename %}
            <img src="{{vich_uploader_asset(property,'imageFile')}} " class="card-img-top" style="width: 100%; height: auto;">
        {% else %}
            <img src="{{'/images/properties/empty.jpg'}} " class="card-img-top" style="width: 100%; height: auto;">
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}" class="text-success">
                {{ property.title }}
            </a>
        </h5>
        <p class="card-text"> {{ property.surface }} &#13217; - {{ property.description | nl2br }}</p>
        <p class="card-text">{{ property.city}} {{ property.postalCode }}</p>
        <div class="text-dark" style="font-size: 2rem; font-weight: bold;"> {{property.formattedPrice}}â‚¬</div>
    </div>
</div>
