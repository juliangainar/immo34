{% extends 'base.html.twig' %}

{% block title %} Immo34 | Bienvue chez vous{% endblock %}

{% block body %}

<div class="jumbotron text-center p-5">
    <h1> Immo34 | Bienvenue </h1>
    <p> L'agence Immo34 vous accompagne dans tous vos achats/locations ou autres !</p>
</div>

    <div class="container">
        <h2>Nos derniers biens</h2>
        <div class="row flex">
            {% for property in properties %}
                <div class="col-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title ">
                                <a class="text-success" style="text-decoration: none; font-weight: bold" href="{{ path('property.show', {id: property.id, slug: property.slug}) }}"> {{ property.title }}</a>
                            </h5>
                            <p class="card-text"> {{ property.city }} ({{ property.postalCode }})</p>
                            <div class="text-success" style="font-weight: bold; font-size: 2rem;"> {{ property.formattedPrice }} â‚¬</div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
